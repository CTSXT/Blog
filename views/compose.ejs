<%-include('partials/header')-%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="single">Title</label>
    <input class="form-control" type="text" name="postTitle" id="single" />
  </div>
  <div class="form-group">
    <label for="textArea">Post</label>
    <textarea
      class="form-control"
      id="textArea"
      name="postText"
      rows="6"
    ></textarea>
  </div>
  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>
<%-include('partials/footer')-%>
